@{
    ViewData["Title"] = "Home Page";
}

@model List<Pizza>


<!doctype html>
<html lang="en">

        <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>Bootstrap demo</title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
                  integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
            <link href="style.css" rel="stylesheet" />
        </head>

    <body>

        <!-- impostazione header -->
        <!-- utilizzo navbar _layout -->
        <!-- impostazione main -->
        <main>

            <!-- primo container main -->
            
                <div>

                <div class="container-fluid ">
                    <div class="row main row ">
                        <div class="col-12 col-md-12 col-xl-12 text-dark ">
                            <div class="text-center">
                                <img src="https://img.freepik.com/premium-vector/pizza-logo-design_9845-319.jpg?w=2000" class="rounded-circle mt-3" width="300"
                                     height="300" alt="img profilo">
                            </div>
                            <div>
                                <h4 class="text-center mb-0 p-4 "> Pizzeria DoIta07 </h4>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            

            <!-- impostazione secondo contenitore main -->

            <h1 class="text-center mt-4 mb-4 p-3  bg-dark text-white"> Le Top Pizze </h1>

            @foreach(Pizza pizza in Model){
            if (pizza.Favorites == true)
            {
                  <div class="container mt-3 ">

            <div class="row row-cols-1 row-cols-md-3 g-4 mt-4 justify-content-evenly">


            <!--Primo card-->

                <div class="card border-0" style="width: 18rem;">
                    <img src="@pizza.Image" class="card-img-top" alt="Pizza">
                    <div class="card-body  ">
                        <h5 class="card-title">@pizza.Name</h5>
                        <p class="card-text">@pizza.Description</p>
                        <p>@pizza.Price</p>
                                <a class="btn btn-primary" href="@Url.Action("Detail", "Pizze", new { id = @pizza.Id } )" role="button">Dettagli</a>
                    </div>
                </div>

            </div>
            </div>
            }
        }
            


        </main>

                   


                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                        crossorigin="anonymous"></script>
                <script type="text/javascript" src="script.js"></script>
    </body>

</html>
